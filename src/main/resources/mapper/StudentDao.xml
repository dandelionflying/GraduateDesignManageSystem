<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gdms.dao.StudentDao">
    <!-- <resultMap type="gdms.model.Student" id="studentResult">
        <id property="" />
    </resultMap> -->
	<select id="selectByLoginnameAndPassword" parameterType="string" resultType="gdms.model.Student">
	    select * from student where s_id = #{username} and s_password = #{password}
	</select>
<!-- 	<update id="updateStudentMessage" parameterMap="">
	    update student () value();
	</update> -->
	
	<insert id="insertSt" parameterType="string">
	    insert into st (s_id,topic_id) values(#{s_id},#{topic_id});
	</insert>
	<insert id="insertInfoBatch" parameterType="java.util.List">
	    insert into student (s_id,student_name,s_password,enter_year,class_name,s_mayor,dept_id,s_sex,s_tel)
	    values
	    <foreach collection="list" item="item" index="index" separator=",">
	      (#{item.sId}, #{item.studentName}, #{item.sPassword},#{item.enterYear}, #{item.class_name},
	      #{item.sMayor}, #{item.deptId},#{item.sSex}, #{item.sTel})
	    </foreach>
	</insert>
	
	<select id="queryStudent" resultType="gdms.model.Student">
	    select * from student;
	</select>
</mapper>
