<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gdms.dao.TeacherDao">
	<select id="selectByLoginNameAndPassword" parameterType="string"
		resultType="gdms.model.Teacher">
		select * from teacher where t_id = #{username} and password = #{password};
	</select>
	<select id="queryMyStudent" parameterType="string" resultType="Student">
		select * from student where s_id in (select s_id from st join topic on
		st.topic_id = topic.topic_id and topic.teacher_name =#{teacherName});
	</select>
	<select id="queryMyStudentById" parameterType="string" resultType="Student">
		select * from student where s_id = #{sId};
	</select>
</mapper>